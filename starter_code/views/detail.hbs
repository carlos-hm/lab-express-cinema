<div class="detail-container">
    <img src="{{image}}">
    <div>
        <a href="/movies">Go back</a>
        <h2>{{title}}</h2>
        <h3>{{director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each stars as |star|}}
            <li>{{star}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>

        <ul>
            {{#each showtimes as |showtime|}}
            <li>{{showtime}} |</li>
            {{/each}}
        </ul>
    </div>
</div>